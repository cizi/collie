<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<title>{$title}{if isset($currentLink)} - {$currentLink->getTitle()}{/if}</title>
	<meta name="description" content={$title}>
	{if $webKeywords != ""}<meta name="keywords" content={$webKeywords}>{/if}
	<meta name="robots" content="index,follow">
	<meta name="googlebot" content="snippet,archive">
	<meta name="author" content="Jan Cimler">
	{if $favicon != ""}
		<link rel='shortcut icon' type='image/x-icon' href="{$favicon}" />
	{/if}

	<link rel="stylesheet" href="{$basePath}/css/style.css">
	<link rel="stylesheet" href="{$basePath}/boostrap/css/bootstrap.css">
	<link rel="stylesheet" href="{$basePath}/css/jquery.bxslider.css">
	<link rel="stylesheet" href="{$basePath}/css/navbar-multilevel.css">
	<link rel="stylesheet" href="{$basePath}/css/bootstrap-datetimepicker.min.css">
	<link rel="stylesheet" href="{$basePath}/css/chosen.css">
	<link rel="stylesheet" href="{$basePath}/css/chosen_form_control.css">
	<link rel="stylesheet" href="{$basePath}/css/ekko-lightbox.css">
	<meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0"/>
</head>
<body>
	<div class="myContent">
		<div id="page-content-wrapper">
			<div class="container-fluid">
				{if isset($male) && isset($female)}
					<div class="row">
						<div style="float: right; margin-top: 15px; margin-right: 15px;">
							<strong>{=DOG_FORM_PEDIGREE}</strong>
							(
							{for $i=4;$i<6;$i++}
								{if $i == $genLev}
									<strong> {$i+1} </strong>
								{else}
									<a href={link VerifyKinship, $male->getID(), $female->getID(), $i}> {$i+1}</a>
								{/if}
							{/for}
							{if $genLev > 4}
								{=DOG_FORM_PEDIGREE_GENERATION_NO}
							{else}
								{=DOG_FORM_PEDIGREE_GENERATION_NO}
							{/if}
							)
						</div><br />
						<div class="col-lg-12 viewHeader" style="height: auto;">
							{=KINSHIP_VERIFICATION}
							[<u>{$male->getTitulyPredJmenem()} {$male->getJmeno()} {$male->getTitulyZaJmenem()}</u>]
							{=KINSHIP_VERIFICATION_AND}
							[<u>{$female->getTitulyPredJmenem()} {$female->getJmeno()} {$female->getTitulyZaJmenem()}</u>]
							<i>Fx = {$coef} % ({=KINSHIP_VERIFICATION_CROSS})</i>
						</div>
					</div>

					<div class="row">
						<div class="col-lg-12">
							{!$malePedigree}
						</div>
					</div>

					<div class="row">
						<div class="col-lg-12">
							{!$femalePedigree}
						</div>
					</div>
				{/if}
			</div>
		</div>
	</div>
</body>